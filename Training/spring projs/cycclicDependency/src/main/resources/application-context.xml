<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
                <bean id = "addr" class="com.pho.main.Address">
                    <constructor-arg value="ram"> </constructor-arg>
                    <constructor-arg  ref="pers"> </constructor-arg>
                </bean>
                <bean id="pers" class="com.pho.main.Person">
                    <constructor-arg value="chennai"></constructor-arg>
                    <constructor-arg ref="addr"></constructor-arg>
                </bean>
                </beans>